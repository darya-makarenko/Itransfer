<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackground"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_background"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout

            android:id="@+id/quality_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quality_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/quality"
                android:textAlignment="center"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/textColor" />

            <LinearLayout
                android:id="@+id/quality_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:gravity="center"
                    android:id="@+id/quality_low"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/quality_low"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/quality_middle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/quality_medium"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/quality_high"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/quality_high"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default_style_cell"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/quality"
                android:textAlignment="center"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/textColor" />

            <android.support.v7.widget.RecyclerView

                android:id="@+id/choose_default_style_rv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:visibility="invisible">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_photo_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_photo_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/video_photo_text"
                android:textAlignment="center"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/textColor" />

            <LinearLayout
                android:id="@+id/video_photo_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:gravity="center"
                    android:id="@+id/photo_choose"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/photo_text"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/video_choose"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/video_text"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/default_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default_style_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/video_photo_text"
                android:textAlignment="center"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/textColor" />

            <LinearLayout
                android:id="@+id/default_style_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>